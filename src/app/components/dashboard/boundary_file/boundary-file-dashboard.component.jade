.ui.category.search
    .ui.icon.input
        input.prompt(type='text', placeholder='Search boundary file...', [(ngModel)]="searchString")
        i.search.icon
    .results

table.ui.celled.table
    thead
        tr
            th My file name
            th Uploaded date
            th Tags
    tbody
        tr(*ngFor='let file of files | search: searchString')
            td {{file.title}}
            td {{formattedDate(file.time)}}
            td {{file.tags}}
    tfoot
        tr
            th(colspan='3')
                .ui.right.floated.pagination.menu
                    a.icon.item
                        i.left.chevron.icon
                    a.item 1
                    a.item 2
                    a.item 3
                    a.item 4
                    a.icon.item
                        i.right.chevron.icon
button.ui.secondary.button((click)='uploadModal.showModal()') Upload
p
    upload-modal([title]="'Upload Boundary File'", [uploadFilePlaceholder]="'Boundary file title'", [supportedFormats]="'GeoJSON'", [formats]="'.json'", #uploadModal='')
