sm-modal(title='{{title}}')
    modal-content
        form
            div#inputContainer
                label
                    | Title:
                .ui.input
                    input(placeholder="{{uploadFilePlaceholder}}", [(ngModel)]="name", type='text', required)
                br
                br
                label
                    | Tags:
                .ui.input
                    tags-input([(ngModel)]="tags")
                br
                .small
                    | Helps in file search
                br
                label
                    | Select a {{supportedFormats}} file:
                .ui.input
                    input.upload-button(type="file", accept="{{formats}}", (change)="selectedFile($event)", required)

                div#container
                    div#progressbarContainer
                        div#progressbar
                    div#status
                button.ui.primary.button((click)="uploadSelectedFile()", type='submit')#upload_button Upload
                button.ui.secondary.button((click)="hideModal()") Close
            .uploadMap(id="{{mapId}}")
